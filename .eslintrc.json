{
  "extends": [
    "eslint:recommended",
    "next",
    "prettier"
  ],
  "rules": {
    "eol-last": 2,
    "no-unused-vars": "warn",
    "implicit-arrow-linebreak": 2,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": "first",
        "offsetTernaryExpressions": true
      }
    ],
    "no-trailing-spaces": 2,
    "no-multi-spaces": 2,
    "semi-spacing": 2,
    "comma-spacing": 2,
    "space-unary-ops": 2,
    "space-infix-ops": [
      2,
      {
        "int32Hint": true
      }
    ],
    "rest-spread-spacing": 2,
    "keyword-spacing": 2,
    "space-in-parens": 2,
    "space-before-function-paren": [
      2,
      {
        "named": "never",
        "anonymous": "always",
        "asyncArrow": "always"
      }
    ],
    "generator-star-spacing": 2,
    "yield-star-spacing": 2,
    "template-tag-spacing": 2,
    "arrow-spacing": 2,
    "func-call-spacing": 2,
    "space-before-blocks": 2,
    "block-spacing": 2,
    "template-curly-spacing": 2,
    "object-curly-spacing": [
      "always"
    ],
    "switch-colon-spacing": 2,
    "key-spacing": 2,
    "computed-property-spacing": 2,
    "no-whitespace-before-property": 2,
    "semi": 2,
    "curly": [
      2,
      "all"
    ],
    "arrow-parens": 2,
    "new-parens": 2,
    "wrap-iife": [
      2,
      "inside"
    ],
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "jsx-quotes": 2,
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "dot-notation": 2,
    "react/jsx-tag-spacing": [
      2,
      {
        "closingSlash": "never",
        "beforeSelfClosing": "always",
        "afterOpening": "never",
        "beforeClosing": "allow"
      }
    ]
  }
}
